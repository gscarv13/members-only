<!DOCTYPE html>
<html  class="has-background-dark">
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar has-background-grey-dark ">
      
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-5 has-text-warning">Members Only</h1>
        <% end %>
      </div>


      <div id="navbarExample" class="navbar-menu">
        <div class="navbar-end">
          <div class="field is-grouped">
            
            <% if user_signed_in? %>
              <p class="control">
              <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: "button is-danger"%>
              </p>
            <% else %>
              <p class="control">
                <%= link_to 'Sign in', new_user_session_path, class: "button is-success"%>
              </p>
              <p>
                <%= link_to 'Sign up', new_user_registration_path, class: "button is-info"%>
              </p>            
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <%= yield %>
    <%# debug(params) %>
  </body>
</html>
